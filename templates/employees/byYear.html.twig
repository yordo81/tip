<table id="employees" class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Nombre y Apellidos</th>
      <th scope="col">Propina</th>
    </tr>
  </thead>
  <tbody>
    {% for querys in query %}
    <tr>
     <td>{{querys.name}} {{ querys.lasname}}</td>
     <td>{{querys.suma}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
{% block javascripts %}
 <script src="/js/main.js"></script>
{% endblock %}
