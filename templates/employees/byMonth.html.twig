{% extends 'base.html.twig' %}

{% block title %}Control de propina{% endblock %}

{% block body %}
<h2>Mejores propineros del mes</h2>
<div class="row">
  <div class="dropdown show">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Opciones
    </a>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      <a href="/employees/new" class="dropdown-item">Agregar trabajador</a>
      <a href="/employees/byDay" class="dropdown-item">Acumulado Diario</a>
      <a href="/employees/byMonth" class="dropdown-item">Acumulado Mensual</a>
      <a href="/employees/byYear" class="dropdown-item">Acumulado Anual</a>
    </div>
  </div>
  <div style="margin-left: 5px" class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Departamentos
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      {% for departments in department %}
      <a class="dropdown-item" href="/employees/byMonthByDep/{{departments.id}}">{{departments.name}}</a>
      {% endfor %}
    </div>
  </div>
</div>
<table id="employees" class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Nombre y Apellidos</th>
      <th scope="col">Propina</th>
    </tr>
  </thead>
  <tbody>
    {% for querys in query %}
    <tr>
     <td>{{querys.name}} {{ querys.lasname}}</td>
     <td>{{querys.suma}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
{% block javascripts %}
 <script src="/js/main.js"></script>
 <script src="/js/jquery-3.3.1.slim.min.js"></script>
 <script src="/js/popper.min.js"></script>
 <script src="/bootstrap-4.1.3/js/bootstrap.min.js"></script>
{% endblock %}
