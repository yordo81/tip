{% extends 'base.html.twig' %}

{% block title %}Control de propina{% endblock %}

{% block body %}
<h2>Departamento</h2>
<a href="/departments/new" type="button" class="btn btn-outline-success">Agregar departamento</a>
<a href="/departments/byDay" type="button" class="btn btn-outline-info">Acumulado Diario</a>
<a href="/departments/byWeek" type="button" class="btn btn-outline-warning">Acumulado Semanal</a>
<a href="/departments/byMonth" type="button" class="btn btn-outline-primary">Acumulado Mensual</a>
<a href="/departments/byYear" type="button" class="btn btn-outline-danger">Acumulado Anual</a>
<table id="departments" class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Slug</th>
      <th scope="col">Descripci√≥n</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {% for department in departments %}
    <tr>
     <td>{{department.name}}</td>
     <td>{{department.slug}}</td>
     <td>{{department.description}}</td>
     <td><a href="/departments/edit/{{department.id}}" type="button" class="btn btn-outline-success">Editar</a>
     <a href="/departments/delete/{{department.id}}" type="button" class="btn btn-outline-danger delete-department" data-id="{{department.id}}">Eliminar</a></td>
     <td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
{% block javascripts %}
 <script src="/js/main.js"></script>
{% endblock %}
